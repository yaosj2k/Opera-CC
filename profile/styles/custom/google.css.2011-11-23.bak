/*adblock*/
#tads,#rhs_block {display: none !important;}
#leftnav{margin-left:-175px!important;}

/*fixed width*/
#cnt,#rcnt,#cnt>.mw{
    margin: 0!important;
    max-width: 100%!important;
}
#center_col,#res,#ires,#rg,#mn {
    display: block !important;
    border:none!important;
    margin: 0!important;
    padding: 0!important;
    border:0!important;
    width: 100% !important;
    max-width: 100%!important;
    min-width: 100%!important;
}
.s{max-width: 96%!important;}
#rcnt {position:static!important;}

/*leftnav hover effect*/
#leftnavc::before{
    content:"";
    height:100%;
    display:block!important;
    width:1%;
    top:25px;
    left:0px;
    z-index:130;
    position:absolute;
}
#leftnav{
    z-index:135;
    background:#FFF!important;
    height:100%;
    opacity: 0.9;
    /* -------> css3 的动画效果 */
    /* -o-transition: margin-left 500ms; */
}
#leftnavc:hover #leftnav{
    margin-top:30px;
    margin-left:0!important;
    /* box-shadow: 0 0 20px 10px rgba(255,255,255,0.9); */
}
 
/*double Columns*/
#ires>ol {
    margin-left:1%!important;
    position:relative!important;
    width:99%!important;
}
#ires>ol>ol,#ires>ol>li.g{
    /* border-radius: 5px !important; */
    background-color: #EBEFF9!important;
    border: 0!important;
    padding:13px 1%!important;
    margin-bottom:0!important;
    margin-top:15px!important;
    margin-left:0!important;
    margin-right:1%!important;
    /* ---------->此处设置结果边框 #000 颜色 */
    box-shadow: 0 0 1px 1px #000;
    height:120px!important;
    width:47%!important;
    overflow: hidden;
    min-height:120px!important;
    position:relative!important;
}
#ires>ol>:nth-child(2n+1){float:left;}
#ires>ol>:nth-child(2n){float:right;}

/*search result auto height 下面这部分打开自动搜索结果高度 */
#ires>ol>ol:hover,#ires>ol>li.g:hover{
    z-index:1;
    height:auto!important;
    position:absolute!important;
}
#ires>ol>li.g:last-child:nth-child(2n+1){position:static!important;height:auto!important;}
#ires>ol>:nth-child(1):hover{top:0;}
#ires>ol>:nth-child(2):hover{top:0;right:0;}
#ires>ol>:nth-child(3):hover{top:161px;}
#ires>ol>:nth-child(4):hover{top:161px;right:0;}
#ires>ol>:nth-child(5):hover{top:322px;}
